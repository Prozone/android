<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="250dip"
        android:layout_height="80dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button1"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:text="1" />


    <Button
        android:id="@+id/button2"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="2" />
        
    <Button
        android:id="@+id/button3"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentRight="true"
        android:text="3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="68dip"
        android:text="4" />
    <Button
        android:id="@+id/button5"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="68dip"
        android:layout_centerHorizontal="true"
        android:text="5" />
     <Button
        android:id="@+id/button6"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignParentRight="true"
        android:text="6" />
      <Button
        android:id="@+id/button7"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="136dip"
        android:text="7" />
      <Button
        android:id="@+id/button8"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_alignBaseline="@+id/button7"
        android:layout_centerHorizontal="true"
        android:text="8" />
      <Button
        android:id="@+id/button9"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignParentRight="true"
        android:text="9" />
      <Button
        android:id="@+id/button10"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="204dip"
        android:text="*" />
     <Button
        android:id="@+id/button11"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_alignBaseline="@+id/button10"
        android:layout_centerHorizontal="true"
        android:text="0" />
     <Button
        android:id="@+id/button12"
        android:layout_width="112dip"
        android:layout_height="76dip"
        android:layout_alignBaseline="@+id/button10"
        android:layout_alignParentRight="true"
        android:text="#" />
     <Button
        android:id="@+id/button13"
        android:layout_width="164dip"
        android:layout_height="56dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="272dip"
        android:text="History" />
      <Button
        android:id="@+id/button14"
        android:layout_width="164dip"
        android:layout_height="56dip"
        android:layout_alignBaseline="@+id/button13"
        android:layout_alignParentRight="true"
        android:text="Send" />

      <ImageButton
          android:id="@+id/imageButton1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/textView1"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_toRightOf="@+id/textView1"
          android:src="@android:drawable/ic_media_previous" />

</RelativeLayout>